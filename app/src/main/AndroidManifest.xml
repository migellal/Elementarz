<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.e_lementarz.elementarz">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="org.e_lementarz.elementarz.MenuActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="org.e_lementarz.elementarz.DotsActivity"
            android:label="@string/title_activity_dots"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="org.e_lementarz.elementarz.BeamsActivity"
            android:label="@string/title_activity_beams"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="org.e_lementarz.elementarz.WordsActivity"
            android:label="@string/title_activity_words"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>
